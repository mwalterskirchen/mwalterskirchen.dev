---
import { getConfigurationCollection } from "../../lib/utils";

const { data: config } = await getConfigurationCollection();
---

<h3 class="font-display mb-4 text-lg leading-loose sm:text-xl">
  {config.experience.title}
</h3>
<ul class="pixel-timeline space-y-6">
  {
    config.experience.experiences.map((experience) => (
      <li class="relative pl-6">
        <span class="pixel-dot" aria-hidden="true" />
        <div class="flex flex-col gap-1">
          <div class="flex flex-wrap items-center gap-2">
            <span class="text-lg font-bold">{experience.title}</span>
            <span class="zag-muted">@</span>
            <a
              href={experience.companyUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="zag-transition underline"
            >
              {experience.company}
            </a>
          </div>
          <div class="zag-text-muted text-sm">
            <time>{experience.start}</time>
            <span> — </span>
            <time>{experience.end}</time>
            <span> • {experience.location}</span>
          </div>
        </div>
      </li>
    ))
  }
</ul>
