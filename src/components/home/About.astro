---
import { getConfigurationCollection } from "../../lib/utils";

const { data: config } = await getConfigurationCollection();
---

<h3 class="font-display text-lg leading-loose sm:text-xl">
  {config.about.title}
</h3>
<div class="zag-text zag-transition">
  <p set:html={config.about.description} />
</div>
<div class="mt-4 flex flex-col gap-2">
  <h4 class="font-display text-lg leading-loose sm:text-xl">
    {config.about.skillsTitle}
  </h4>
  <ul class="flex flex-wrap gap-2">
    {
      config.about.skills.map((skill) => (
        <li class="-zag-text -zag-bg zag-transition px-2 py-1 text-sm font-semibold">
          {skill}
        </li>
      ))
    }
  </ul>
</div>
